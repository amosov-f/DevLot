<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost/devlot?useUnicode=true&amp;characterEncoding=UTF-8"/>
        <property name="username" value="root"/>
        <property name="password" value="12345"/>
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="dataDepot" class="ru.devlot.db.spreadsheet.DataDepot">
    </bean>

    <bean id="infoDepot" class="ru.devlot.db.spreadsheet.InfoDepot">
    </bean>

    <bean id="classifierDepot" class="ru.devlot.db.ClassifierDepot" init-method="init">
        <property name="dataDepot" ref="dataDepot"/>
    </bean>

    <bean id="nearestNeighbourDepot" class="ru.devlot.db.NearestNeighbourDepot" init-method="init">

        <property name="dataDepot" ref="dataDepot"/>
        <property name="infoDepot" ref="infoDepot"/>
    </bean>

</beans>